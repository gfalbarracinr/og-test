    .setHTML('<img src="/logo.svg" height=40/>')
    .addTo(bsasMap);

  const munichMap = new mapboxgl.Map({
    container: "ekumenMunich",
    style: "mapbox://styles/mapbox/streets-v8",
    center: [11.584761013492237, 48.15874641011694],
    zoom: 12,
  });

  new mapboxgl.Popup({
    closeButton: false,
    closeOnClick: false,
  })
    .setLngLat([11.584761013492237, 48.15874641011694])
    .setHTML('<img src="/logo.svg" height=40/>')
    .addTo(munichMap);
</script>
