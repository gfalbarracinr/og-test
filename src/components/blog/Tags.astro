---
import Tag from "./Tag.astro";

interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<style>
  .container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }
</style>

<div class="container">
  {
    tags.map((tag, i) => (
      <div class="tag">
        <Tag tag={tag} isDark={i%2 !== 0}/>
      </div>
    ))
  }
</div>
