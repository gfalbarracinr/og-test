---
interface Props {
  tag: string;
  isDark?: boolean;
}

const { tag, isDark } = Astro.props;
---

<style>
  A {
    color: #FFF;
    text-decoration: none;
    background-color: #8E68BE;
    padding: 4px 12px;
    text-transform: uppercase;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.04rem;
    line-height: 1rem;
  }
  a:hover {
    background-color: #6b2875;
  }
  .dark {
    background-color: #43499E;
  }
</style>

<a href={`/blog/tags/${tag}`} class:list={[{dark: isDark}]}>
  {tag}
</a>
